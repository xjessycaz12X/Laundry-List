{{#if logged_in}}
  <div class="row" style="text-align:right">
    <div class="col-md-12">
      <h4 class="welcome"> Hey there {{name}}</h4>
      <button class="btn btn-primary" type="submit">
        <a href="/newproject">New project</a>
      </button>
      <button class="btn btn-primary" type="submit">
        <a href="/newtask">New task</a>
      </button>
    </div>
  </div>
  <hr />
  <div class="row mb-4 projects">
    {{#each projects as |project|}}
      <div class="col-md-4">
        <div class="row mb-4 project">
          <div class="col-md-12">
            <div class="row project-header">
              <div class="col-md-12">
                <h2>
                  <a href="/project/{{project.id}}">
                    {{project.name}}
                  </a>
                </h2>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <p>
              "{{project.description}}"
            </p>
          </div>
          {{#if project.tasks}}
            {{#each project.tasks as |task|}}
              <div class="col-md-12">
                <div class="row">
                  <div
                    class="col-md-12 priority-{{task.priority}}"
                    id={{task.id}}
                  >
                    <input
                      type="checkbox"
                      data-id={{task.id}}
                      data-status={{task.status}}
                      class="check-task"
                      {{task.checked}}
                    />
                    <label>{{task.name}} - {{format_date task.due_date}}</label>
                  </div>
                </div>
              </div>
            {{/each}}
          {{else}}
            <div class="col-md-12">
              <h6>What tasks?!</h6>
            </div>
          {{/if}}
          <hr />
          <div class="col-md-12" id="project-actions">
            <a
              href="/editproject/{{project.id}}"
              style="cursor:pointer"
              type="button"
              data-id="{{project.id}}"
              class="btn btn-light btn-circle edit-btn"
            >
              <i class="fas fa-edit fa-1x"></i>
            </a>
            <button
              style="cursor:pointer"
              type="button"
              data-id="{{project.id}}"
              class="btn btn-light btn-circle del-btn"
            >
              <i class="fas fa-trash fa-1x"></i>
            </button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
<script src="/js/mrdone.js"></script>
<script src="/js/edittask.js"></script>